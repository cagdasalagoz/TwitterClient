<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >


    <TextView
        android:id="@+id/search_listName_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:paddingTop="5dp"

        android:text="@string/header"
        android:textColor="#000000"
        android:layout_alignLeft="@+id/search_about_textview"
        android:layout_alignStart="@+id/search_about_textview"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"
        android:layout_alignParentTop="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"

        android:id="@+id/search_about_textview"
        android:text="@string/about"
        android:textSize="15sp"
        android:layout_below="@+id/search_listName_textview"
        android:layout_marginBottom="5dp"
        android:textColor="#000000"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="5dp" />


</RelativeLayout>